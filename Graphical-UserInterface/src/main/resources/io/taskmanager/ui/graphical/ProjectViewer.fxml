<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane fx:id="borderPane" maxHeight="-Infinity" maxWidth="-Infinity" xmlns="http://javafx.com/javafx/15.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="io.taskmanager.ui.graphical.ProjectController">
   <top>
      <Label fx:id="projectTitle" text="Project Title" BorderPane.alignment="BOTTOM_LEFT">
         <font>
            <Font size="24.0" />
         </font>
      </Label>
   </top>
   <center>
      <VBox minWidth="200.0" style="-fx-border-color: black;" BorderPane.alignment="CENTER">
         <children>
            <AnchorPane minWidth="200.0">
               <children>
                  <Label text="Columns" AnchorPane.leftAnchor="0.0" />
                  <Button mnemonicParsing="false" onAction="#OnAddColumn" text="add column" AnchorPane.rightAnchor="0.0" />
               </children>
            </AnchorPane>
            <ScrollPane VBox.vgrow="ALWAYS">
               <content>
                  <HBox fx:id="columnHBox" spacing="15.0">
                     <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </padding></HBox>
               </content>
            </ScrollPane>
         </children>
      </VBox>
   </center>
   <right>
      <VBox fx:id="devsVBox" spacing="10.0" style="-fx-border-color: black;" BorderPane.alignment="CENTER">
         <children>
            <AnchorPane minWidth="120.0">
               <children>
                  <Label text="Devs" AnchorPane.leftAnchor="0.0">
                     <font>
                        <Font size="18.0" />
                     </font>
                  </Label>
                  <Button mnemonicParsing="false" onAction="#OnAddDev" text="add Dev" AnchorPane.rightAnchor="0.0" />
               </children>
            </AnchorPane>
         </children>
         <BorderPane.margin>
            <Insets left="5.0" />
         </BorderPane.margin>
         <padding>
            <Insets left="5.0" right="5.0" />
         </padding>
      </VBox>
   </right>
</BorderPane>
