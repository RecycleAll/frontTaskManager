<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TitledPane?>
<?import javafx.scene.control.Tooltip?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import org.kordamp.ikonli.javafx.FontIcon?>

<fx:root maxHeight="-Infinity" maxWidth="-Infinity" style="-fx-border-radius: 10; -fx-background-radius: 10; -fx-background-size: 0; -fx-border-color: black; -fx-border-width: 2;" type="ScrollPane" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1">
   <opaqueInsets>
      <Insets />
   </opaqueInsets>
   <padding>
      <Insets bottom="3.0" left="3.0" right="3.0" top="3.0" />
   </padding>
   <content>
      <TitledPane alignment="CENTER" animated="false" collapsible="false" contentDisplay="GRAPHIC_ONLY" text="Column Title">
         <content>
            <VBox fx:id="TaskVBox" spacing="15.0" />
         </content>
         <graphic>
            <AnchorPane prefWidth="200.0">
               <children>
                  <Button alignment="BOTTOM_LEFT" layoutX="149.0" mnemonicParsing="false" onAction="#OnAddTask" AnchorPane.rightAnchor="30.0">
                        <graphic>
                           <FontIcon iconLiteral="anto-plus-circle" iconSize="18" />
                        </graphic>
                     <tooltip>
                        <Tooltip text="add a new task to this column">
                           <font>
                              <Font size="14.0" />
                           </font>
                        </Tooltip>
                     </tooltip>
                     <padding>
                        <Insets bottom="3.0" left="3.0" right="3.0" top="3.0" />
                     </padding>
                  </Button>
                  <Label fx:id="ColumnTitleLabel" layoutX="8.0" layoutY="6.0" text="Column Title" AnchorPane.leftAnchor="0.0" />
                  <Button mnemonicParsing="false" onAction="#OnEdit" AnchorPane.rightAnchor="0.0">
                     <graphic>
                        <FontIcon iconLiteral="anto-setting" iconSize="18" />
                     </graphic>
                     <tooltip>
                        <Tooltip text="edit this column">
                           <font>
                              <Font size="14.0" />
                           </font>
                        </Tooltip>
                     </tooltip>
                     <padding>
                        <Insets bottom="3.0" left="3.0" right="3.0" top="3.0" />
                     </padding>
                  </Button>
               </children>
            </AnchorPane>
         </graphic>
      </TitledPane>
   </content>
</fx:root>
